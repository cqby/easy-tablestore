{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true
    },
    "files": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}